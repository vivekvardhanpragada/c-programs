#include<stdio.h>
int main()
{
	int n,r,sum=0,product=1,result;
	printf("Enter a number\n");
	scanf("%d",&n);
	while(n>0)
	{
		r=n%10;
		sum=sum+r;
		product=product*r;
		n=n/10;
	}
	printf("sum of digits:%d\n",sum);
	printf("product of digits:%d\n",product);
	{
		result=product-sum;
		printf("result:%d",result);
	}
	return 0;
}
